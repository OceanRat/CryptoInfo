<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.daniels.myapplication.Graph">

     <ScrollView
        android:layout_width="0dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="348dp"
                android:layout_height="112dp"
                app:srcCompat="@drawable/bitcoin"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="343dp"
                android:layout_height="71dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:layout_weight="0.82"
                android:text="  Bitcoin - the currency that started back in 2009. from few hundred USD it raised to 8.2k USD in the past several months. It is most popular currency on the internet and is accepted worldwide in the real life. "
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="240dp" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:ems="10"
                android:inputType="textMultiLine"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="353dp" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:ems="10"
                android:inputType="textMultiLine"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="353dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="350dp"
                android:layout_height="119dp"
                app:srcCompat="@drawable/einsteinium" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="364dp"
                android:layout_height="94dp"
                android:text="   Bitcoin cash - made after the famous Bitcoin 1st august 2017. Started the worth at 300 USD. Until the start of November it reached 1k, now days its worth around 1.5k and is still raising."
                tools:layout_editor_absoluteX="165dp"
                tools:layout_editor_absoluteY="401dp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="330dp"
                android:layout_height="119dp"
                app:srcCompat="@drawable/bcash"
                tools:layout_editor_absoluteX="165dp"
                tools:layout_editor_absoluteY="201dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="351dp"
                android:layout_height="82dp"
                android:text="    Einsteinium - worth is shown in the Bitcoins. It started on July 2017. Its price started at 0.000025 Bitcoins which is around 20c. Price is changing a lot, right now it is worth 0.000018 Bitcoins, which is around 14c. "
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="201dp" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:ems="10"
                android:inputType="textMultiLine"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="169dp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="365dp"
                android:layout_height="103dp"
                app:srcCompat="@drawable/etherium" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="351dp"
                android:layout_height="82dp"
                android:text="   Ethereum - started in july 2015. The price is raising and falling around 50 USD in circle. It is worth the most now – 416$. The lowest worth was 53%." />

            <EditText
                android:id="@+id/editText7"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:ems="10"
                android:inputType="textMultiLine"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="169dp" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="103dp"
                app:srcCompat="@drawable/ethereumclassic" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="351dp"
                android:layout_height="82dp"
                android:text="   Ethereumclassic - released in july 2015. It started at the worth of 0.92$, right now it is worth 18$. The top worth was in June when it was worth 21$." />

            <EditText
                android:id="@+id/editText8"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:ems="10"
                android:inputType="textMultiLine"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="169dp" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="103dp"
                app:srcCompat="@drawable/litecoin" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="351dp"
                android:layout_height="82dp"
                android:text="   Litecoin - it was released back in 2011. Just until recently its price hasn't been changing a lot. It was from 2-10$. From March 2017 its worth has been increasing and the maximum worth was 83$. Right now the worth is 73$." />

            <EditText
                android:id="@+id/editText9"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:ems="10"
                android:inputType="textMultiLine"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="169dp" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="103dp"
                app:srcCompat="@drawable/ripple" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="351dp"
                android:layout_height="82dp"
                android:text="   Ripple - currency released in 2012. For a long time its price was around 0.007$. From March 2017 its price has been increasing. The top worth was in end May – around 39$. Current worth is 0.24$." />

            <EditText
                android:id="@+id/editText10"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:ems="10"
                android:inputType="textMultiLine"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="169dp" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="103dp"
                app:srcCompat="@drawable/zcash" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="351dp"
                android:layout_height="82dp"
                android:text="   Zcash - the currency that probably changed the most in the negative way. It got out in end October 2016 with the starting worth of 9k USD. At the start of 2017 it dropped all the way down to 26$. Current worth is around 250$." />


        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
